<local:ExamplePageBase x:Class="SDKExamples.UWP.Listview.HeaderFooter"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="using:SDKExamples.UWP"
                       xmlns:data="using:Telerik.UI.Xaml.Controls.Data">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <data:RadListView x:Name="listView">
            <data:RadListView.ListHeader>
                <Border Padding="10" Background="WhiteSmoke">
                    <TextBlock FontSize="24" Text="Header" />
                </Border>
            </data:RadListView.ListHeader>
            <data:RadListView.ListFooter>
                <Border Padding="10" Background="WhiteSmoke">
                    <TextBlock FontSize="24" Text="Footer" />
                </Border>
            </data:RadListView.ListFooter>
        </data:RadListView>
    </Grid>
</local:ExamplePageBase>
